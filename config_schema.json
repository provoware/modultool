{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Modultool Konfiguration",
  "type": "object",
  "properties": {
    "theme": {
      "type": "string",
      "description": "Farbschema, z.B. 'light' oder 'dark'"
    },
    "backup": {
      "type": "boolean",
      "description": "Automatisches Backup aktivieren"
    },
    "language": {
      "type": "string",
      "description": "Spracheinstellung, z.B. 'de' oder 'en'"
    }
  },
  "additionalProperties": false
}
